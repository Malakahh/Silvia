<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Themes="clr-namespace:SilviaCore.Themes">
    <Style x:Key="SilviaListBox" TargetType="{x:Type ListBox}" BasedOn="{StaticResource {x:Type ListBox}}">
        <Setter Property="Background" Value="{Binding Source={x:Static Themes:ThemeSettings.Instance}, Path=ControlBackgroundBrush}"/>
        <Setter Property="BorderThickness" Value="{Binding Source={x:Static Themes:ThemeSettings.Instance}, Path=ControlBorderThickness}"/>
    </Style>
</ResourceDictionary>
